<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

    <item>
        <shape>
            <!-- set the shadow color here -->
            <stroke
                android:width="3dp"
                android:color="#7000" />

            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->

            <padding
                android:bottom="-4dp"
                android:left="0dp"
                android:right="0dp"
                android:top="3dp" />

            <corners android:topLeftRadius="35dp" android:topRightRadius="35dp" />

        </shape>
    </item>

    <!-- Background -->

    <item>
        <shape>
            <solid android:color="@color/primary_color" />

            <stroke
                android:color="@color/primary_text_color"
                android:width="1dp"/>
            <corners android:topLeftRadius="35dp" android:topRightRadius="35dp" />

        </shape>
    </item>
</layer-list>
